{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "CustomLogger": {
    "MinimumLogLevel": "Information",

    "Buffer": {
      "Enabled": true,
      "MaxSize": 500,
      "FlushIntervalMs": 2000
    },

    "Sinks": {
      "Console": {
        "Enabled": true
      },
      "File": {
        "Enabled": true,
        "Path": "logs\\GamesAPI\\app.log"
      },
      "BlobStorage": {
        "Enabled": false,
        "ConnectionString": "",
        "ContainerName": ""
      }
    }
  }
}
