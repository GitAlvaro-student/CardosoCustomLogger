{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "CustomLogger": {
    "ServiceName": "GamesAPI",
    "Environment": "Development",
    "MinimumLogLevel": "Warning",

    "Buffer": {
      "Enabled": true,
      "MaxSize": 500
    },

    "Batch": {
      "BatchSize": 50,
      "FlushIntervalMs": 8000
    },

    "Sinks": {
      "Console": {
        "Enabled": true
      },
      "File": {
        "Enabled": true,
        "Path": "C:/logs/GamesAPI/logs-21-02.log"
      },
      "BlobStorage": {
        "Enabled": false,
        "ConnectionString": "",
        "ContainerName": "logs-music-api"
      },
      "Dynatrace": {
        "Enabled": false,
        "Endpoint": "",
        "ApiToken": "",
        "TimeoutSeconds": 5
      },
      "OpenTelemetry": {
        "Enabled": true,
        "Exporter": "Console",
        "Instrumentations": {
          "AspNetCore": true,
          "HttpClient": true,
          "Oracle": false
        }
      }
    }
  }
}
